<div class="wookmarkWrap">
    <div id="wookmark">
        {{#foreach posts}}
        <article class="{{post_class}} item postContainer">
            <div class="tagShare">
                <div class="tags">{{tags separator=", "}}</div>
                    <div class="shareIcon icon-share"></div>
                    <div class="share">
                        <a class="icon-twitter" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"
                            onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;"></a>
                        <a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                            onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;"></a>
                        <a class="icon-googleplus" href="https://plus.google.com/share?url={{url absolute="true"}}"
                           onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;"></a>
                    </div>
                </div>
            <a class="ajaxLink imageContain" href="{{url}}">
                <div class="subHeroImage">
                    {{#if image}} <img src="{{image}}#hero" /> {{else}} {{content words="0"}} {{/if}}
                </div>
            </a>
            <div class="contentWrap">
                <div class="content itemPostContent">
                    <h1 class="postTitle"><a class="ajaxLink" href="{{url}}">{{{title}}}</a></h1>
                    <time class="dateStamp" datetime="{{date format='YYYY-MM-DD'}}">
                        <span>&mdash;&ensp;</span>
                        <i>Published {{date format="DD MMM"}} by {{author}}</i>
                        <span>&ensp;&mdash;</span>
                    </time>
                    <p>{{excerpt characters=130}}&hellip;</p>
                <footer>
                    <a href="{{url}}" class="ajaxLink">
                        <div class="readMore">Read Me</div>
                    </a>
                </footer>
                </div>
            </div>
        </article>
        {{/foreach}}
    </div>
    {{pagination}}
</div>
